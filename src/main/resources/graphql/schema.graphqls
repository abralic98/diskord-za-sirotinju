#### SERVERS & ROOMS #################

type Server {
  id: ID
  name: String
  rooms: [Room]
  joinedUsers: [User]
  createdBy: User
  publicServer: Boolean
}

type ServerPage {
  content: [Server!]!
  totalPages: Int!
  totalElements: Int!
  number: Int!
  size: Int!
}

input JoinServerInput {
  id: ID!
  invitationLink: String
}

type Room {
  id: ID!
  name: String!
  maxLimit: Int
  type: RoomType
  messages: [Message]
  server: Server
  createdBy: User
}

enum RoomType {
  VOICE
  TEXT
}

type Rooms {
  text: [Room]
  voice: [Room]
}

type Message {
  id: ID
  author: User
  text: String
  imgPath: String
  type: MessageType
  dateCreated: String
  dateUpdated: String
}

type MessagePage {
  content: [Message!]!
  totalPages: Int!
  totalElements: Int!
  number: Int!
  size: Int!
}

enum MessageType {
  TEXT
  ATTACHMENT
}

input CreateServerInput {
  name: String!
  publicServer: Boolean!
}

input CreateRoomInput {
  name: String!
  type: RoomType!
  serverId: ID!
}

input CreateMessageInput {
  text: String!
  type: MessageType!
  roomId: ID!
}

